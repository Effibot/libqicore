"""qiPkg command line tool.
"""

import argparse
import qisys.script


def main():
    parser = argparse.ArgumentParser()
    modules = qisys.script.action_modules_from_package("qipkg.actions")
    qisys.script.root_command_main("qipkg", parser, modules)

if __name__ == "__main__":
    main()
